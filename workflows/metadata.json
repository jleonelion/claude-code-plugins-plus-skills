{
  "$schema": "https://claudecodeplugins.io/schemas/workflows.schema.json",
  "name": "claude-code-plugins-workflows",
  "version": "1.0.0",
  "description": "BMAD-compatible workflows for Claude Code plugin development",
  "homepage": "https://claudecodeplugins.io/",
  "compatibility": {
    "bmad": ">=6.0.0",
    "claudeCode": ">=1.0.0"
  },
  "workflows": [
    {
      "id": "feature-planning",
      "name": "Feature Planning",
      "description": "Plan new plugin features with PM and Architect agents",
      "file": "bmad/feature-planning.md",
      "agents": ["analyst", "pm", "architect"],
      "phases": ["analysis", "planning", "solutioning"],
      "estimatedTime": "30-60 min",
      "tags": ["planning", "features", "requirements"]
    },
    {
      "id": "architecture-review",
      "name": "Architecture Review",
      "description": "Review plugin architecture with Architect and Security agents",
      "file": "bmad/architecture-review.md",
      "agents": ["architect", "security", "reviewer"],
      "phases": ["analysis", "review", "recommendations"],
      "estimatedTime": "20-40 min",
      "tags": ["architecture", "review", "security"]
    },
    {
      "id": "full-development-cycle",
      "name": "Full Development Cycle",
      "description": "Complete plugin development from idea to deployment",
      "file": "bmad/full-development-cycle.md",
      "agents": ["analyst", "pm", "architect", "developer", "qa", "devops"],
      "phases": ["analysis", "planning", "solutioning", "implementation", "testing", "deployment"],
      "estimatedTime": "2-4 hours",
      "tags": ["development", "full-cycle", "deployment"]
    }
  ],
  "mcpIntegration": {
    "recommendedServers": [
      "project-health-auditor",
      "conversational-api-debugger",
      "workflow-orchestrator"
    ]
  }
}
